<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res/com.utree.eightysix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        tools:ignore="RtlSymmetry"
        >

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp"
            android:background="@drawable/bg_chat_item_to"
            android:layout_toLeftOf="@+id/aiv_portrait"
            android:layout_toStartOf="@+id/aiv_portrait"
            >

        <ImageView
                android:id="@+id/iv_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:paddingLeft="3dp"
                android:paddingStart="3dp"
                android:paddingTop="1dp"
                android:paddingRight="1dp"
                android:paddingEnd="3dp"
                android:paddingBottom="1dp"
                android:src="@drawable/ic_warning"
                />

        <ProgressBar
                android:id="@+id/pb_loading"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                />

        <com.rockerhieu.emojicon.EmojiconTextView
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="8dp"
                android:textColor="#ff3d3d3d"
                android:textSize="16sp"
                app:emojiconSize="24dp"
                />

    </LinearLayout>

    <com.utree.eightysix.widget.AsyncImageViewWithRoundCorner
            android:id="@+id/aiv_portrait"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="6dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            app:width="40dp"
            app:eig_height="40dp"
            app:radius="4dp"
            />
</RelativeLayout>
