<merge
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res/com.utree.eightysix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

        <LinearLayout
                android:id="@+id/ll_tabs"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:orientation="horizontal"
                />

        <com.utree.eightysix.widget.IndicatorView
                android:id="@+id/in_tab"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="bottom"
                app:drawable="@drawable/apptheme_indicator_tab"
                app:selector="@drawable/apptheme_indicator_tab_selected"
                app:spacing="0dp"
                />
    </FrameLayout>

</merge>
