<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res/com.utree.eightysix"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:paddingTop="16sp"
            android:paddingLeft="8dp"
            android:paddingStart="8dp"
            android:paddingRight="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="16dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="#ffff3850"
            >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="@android:color/white"
                android:text="@string/lanmei_bainian_title"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:text="@string/lanmei_bainian_info"
                />

        <EditText
                android:id="@+id/et_recipient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32sp"
                android:layout_marginRight="32sp"
                android:textSize="14sp"
                android:maxLength="10"
                android:singleLine="true"
                android:maxLines="1"
                android:inputType="text"
                android:hint="@string/recipient_hint"
                />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32sp"
                android:layout_marginRight="32sp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:gravity="bottom"
                >

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:text="@string/what_to_say"
                    />

            <ImageView
                    android:id="@+id/iv_refresh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_action_refresh"
                    />
        </LinearLayout>

        <EditText
                android:id="@+id/et_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32sp"
                android:layout_marginRight="32sp"
                android:textSize="14sp"
                android:maxLength="10"
                android:singleLine="true"
                android:maxLines="1"
                android:inputType="text"
                />

        <com.utree.eightysix.widget.RoundedButton
                android:id="@+id/rb_generate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="@string/generate_bainian"
                android:textSize="16sp"
                app:radius="8dp"
                app:background="@android:color/white"
                />
    </LinearLayout>
</merge>