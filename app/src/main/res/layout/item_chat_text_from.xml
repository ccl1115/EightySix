<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res/com.utree.eightysix"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="8dp"
        >

    <com.utree.eightysix.widget.FontPortraitView
            android:id="@+id/fpv_portrait"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="6dp"
            android:gravity="center"
            />

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="48dp"
            android:layout_marginEnd="48dp"
            android:background="@drawable/bg_chat_item_from"
            android:orientation="horizontal"
            tools:ignore="UselessParent"
            >

        <com.rockerhieu.emojicon.EmojiconTextView
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="8dp"
                android:textColor="#ff3d3d3d"
                android:textSize="16sp"
                app:emojiconSize="24dp"
                />

        <ProgressBar
                android:id="@+id/pb_loading"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                />

        <ImageView
                android:id="@+id/iv_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:paddingLeft="3dp"
                android:paddingStart="3dp"
                android:paddingTop="1dp"
                android:paddingRight="1dp"
                android:paddingEnd="3dp"
                android:paddingBottom="1dp"
                android:src="@drawable/ic_warning"
                />
    </LinearLayout>

    <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minWidth="48dp"
            />
</LinearLayout>
