<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res/com.utree.eightysix"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/apptheme_primary_grey_color"
        >

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/apptheme_primary_grey_color"
                >

            <LinearLayout
                    android:id="@+id/ll_portrait"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:background="@drawable/apptheme_primary_list_selector"
                    >

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:padding="16dp"
                        android:text="修改头像"
                        />

                <com.utree.eightysix.widget.AsyncImageViewWithRoundCorner
                        android:id="@+id/aiv_portrait"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="16dp"
                        android:layout_marginEnd="16dp"
                        app:radius="4dp"
                        app:width="40dp"
                        app:height="40dp"
                        />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1px"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="@drawable/apptheme_primary_list_selector"
                    >

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="修改昵称"
                        />

                <com.rockerhieu.emojicon.EmojiconTextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/apptheme_primary_grey_color_200"
                        />

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1px"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="@drawable/apptheme_primary_list_selector"
                    >

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="修改性别"
                        />

                <TextView
                        android:id="@+id/tv_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/apptheme_primary_grey_color_200"
                        />

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1px"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="@drawable/apptheme_primary_list_selector"
                    >

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="修改生日"
                        />

                <TextView
                        android:id="@+id/tv_birthday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/apptheme_primary_grey_color_200"
                        />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_current"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="@drawable/apptheme_primary_list_selector"
                    >

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="设置在职"
                        />

                <TextView
                        android:id="@+id/tv_current"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/apptheme_primary_grey_color_200"
                        />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_hometown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="@drawable/apptheme_primary_list_selector"
                    >

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="设置家乡"
                        />

                <TextView
                        android:id="@+id/tv_hometown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/apptheme_primary_grey_color_200"
                        />
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_signature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/apptheme_primary_list_selector"
                    >

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="更新签名"
                        />

                <TextView
                        android:id="@+id/tv_signature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/apptheme_primary_grey_color_200"
                        />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
