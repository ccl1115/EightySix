<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/apptheme_primary_grey_color"
        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:padding="16dp"
            android:orientation="horizontal"
            android:background="@android:color/white"
            >

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="年龄"
                />

        <TextView
                android:id="@+id/tv_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/apptheme_primary_grey_color_200"
                />

    </LinearLayout>

    <LinearLayout
            android:id="@+id/ll_constellation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1px"
            android:padding="16dp"
            android:orientation="horizontal"
            android:background="@android:color/white"
            >

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="星座"
                />

        <Spinner
                android:id="@+id/sp_constellation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
    </LinearLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:padding="16dp"
            android:gravity="center_horizontal"
            android:text="选择生日，系统将自动为你转换年龄及性别哦\n当然，你也可以手动设定星座"
            android:textColor="@color/apptheme_primary_grey_color_200"
            />


    <DatePicker
            android:id="@+id/dp_birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1px"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/white"
            android:calendarViewShown="false"
            />
</LinearLayout>