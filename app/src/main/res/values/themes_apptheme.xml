<?xml version="1.0" encoding="utf-8"?>

<!-- Generated with http://android-holo-colors.com -->
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@null</item>

        <item name="android:windowNoTitle">true</item>

        <item name="topBarStyle">@style/Widget.TopBar.AppTheme</item>
        <item name="roundedButtonStyle">@style/Widget.RoundedButton.Apptheme</item>
        <item name="postEditTextStyle">@style/Widget.PostEditText.Apptheme</item>
        <item name="refreshIndicatorStyle">@style/Widget.RefreshIndicator.AppTheme</item>
        <item name="counterViewStyle">@style/Widget.RoundedButton.Apptheme.Count</item>

        <item name="android:editTextStyle">@style/Widget.EditText.AppTheme</item>
        <item name="android:checkboxStyle">@style/Widget.CheckBox.AppTheme</item>
        <item name="android:radioButtonStyle">@style/Widget.RadioButton.AppTheme</item>

        <item name="android:listViewStyle">@style/Widget.ListView.Apptheme</item>

        <item name="android:dropDownSpinnerStyle">@style/Widget.Spinner.Apptheme</item>
        <item name="android:spinnerDropDownItemStyle">@style/Widget.Spinner.DropdownItem.Apptheme</item>
        <item name="android:spinnerItemStyle">@style/Widget.Spinner.Item.Apptheme</item>

        <item name="android:seekBarStyle">@style/Widget.SeekBar.Apptheme</item>
    </style>

    <style name="AppTheme.Light" parent="AppTheme">
        <item name="android:spinnerItemStyle">@style/Widget.Spinner.Item.Light</item>
        <item name="android:dropDownSpinnerStyle">@style/Widget.Spinner.Light</item>
    </style>

    <style name="AppTheme.Dialog" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:colorBackground">@color/transparent</item>
        <item name="android:colorForeground">@color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/transparent</item>
        <item name="android:windowIsFloating">true</item>
    </style>


</resources>