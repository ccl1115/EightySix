<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="IndicatorView">
        <attr name="spacing" format="dimension"/>
        <attr name="drawable" format="reference"/>
        <attr name="selector" format="reference"/>
        <attr name="autoHide" format="boolean"/>
        <attr name="count" format="integer"/>
    </declare-styleable>

    <declare-styleable name="TopBar">

        <attr name="titleColor" format="reference|color"/>
        <attr name="topLineColor" format="reference|color"/>
        <attr name="botLineColor" format="reference|color"/>
    </declare-styleable>

    <declare-styleable name="RoundedButton">
        <attr name="radius" format="reference|dimension"/>
        <attr name="background" format="reference|color"/>
    </declare-styleable>

    <declare-styleable name="RandomSceneTextView">
        <attr name="text" format="string|reference"/>
        <attr name="subText" format="string|reference"/>
        <attr name="drawable"/>
    </declare-styleable>

    <!--标题栏样式-->
    <attr name="topBarStyle" format="reference"/>
    <!--圆角按钮默认样式-->
    <attr name="roundedButtonStyle" format="reference"/>
    <!--计数样式-->
    <attr name="counterViewStyle" format="reference"/>
    <attr name="postEditTextStyle" format="reference"/>
    <attr name="refreshIndicatorStyle" format="reference"/>

    <attr name="alp_drawable_btn_code_lock_default_holo" format="reference" />
    <attr name="alp_drawable_btn_code_lock_touched_holo" format="reference" />
    <attr name="alp_drawable_indicator_code_lock_point_area_default_holo" format="reference" />
    <attr name="alp_ic_action_lockpattern" format="reference" />
    <attr name="aosp_drawable_indicator_code_lock_point_area_normal" format="reference" />

    <attr name="alp_color_pattern_path" format="reference" />


    <declare-styleable name="RefresherView">
        <attr name="direction" format="string"/>
        <attr name="max_height" format="dimension"/>
        <attr name="threshold_height" format="dimension"/>
        <attr name="refresher_head" format="integer"/>
        <attr name="refresher_content" format="integer"/>
        <attr name="empty_view" format="integer"/>
    </declare-styleable>

    <declare-styleable name="FloatingLayout_Layout">

        <!-- regex: (before|after|both) -->
        <attr name="layout_clear" format="string" />
    </declare-styleable>

    <declare-styleable name="AsyncImageViewWithRoundCorner">
        <attr name="radius"/>
    </declare-styleable>
</resources>