<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/tv_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:background="@color/minor_head_color"
            android:layout_above="@+id/ll_bottom_comment"
            android:text="你好你啊好你好你啊好你好你啊好你好你啊好你好你啊好你好你啊好你好你啊好你好你啊好你好你啊好你好你啊好你好你啊好你好你啊好"
            android:padding="20dp"
            android:maxLines="5"
            android:ellipsize="end"
            android:enabled="true"/>


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_bottom"
            android:layout_above="@+id/ll_bottom_comment"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_source"
                android:singleLine="true"
                android:maxLines="1"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_gravity="center_vertical"
                android:text="菊花"
                android:textColor="@android:color/white"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9999"
                android:id="@+id/tv_praise"
                android:drawableLeft="@drawable/ic_action_favorite"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:textColor="@android:color/white"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.0 K"
                android:id="@+id/tv_comment"
                android:drawableLeft="@drawable/ic_action_reply"
                android:gravity="center_vertical"
                android:textColor="@android:color/white"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/ll_bottom_comment"
            android:padding="10dp"
            android:background="@color/minor_head_color_pressed">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="楼主：呵呵"
                android:id="@+id/tv_last_comment"
                android:textColor="@android:color/primary_text_dark"/>
    </LinearLayout>
</RelativeLayout>