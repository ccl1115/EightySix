<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="10dp"
              android:paddingRight="10dp">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tv_content"
                android:text="a你好你啊好你好你啊好你好你啊好你好你啊好你好你啊好你好你啊好你好你啊好你好你啊好你好你啊好你好你啊好你好你啊好你好你啊好"
                android:textSize="22sp"
                android:padding="45dp"
                android:background="@drawable/bpush_top_bg"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:id="@+id/ll_bottom"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_source"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:text="菊花"
                    android:textColor="@android:color/white"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9999"
                    android:id="@+id/tv_praise"
                    android:drawableLeft="@drawable/ic_action_favorite"
                    android:layout_marginRight="15dp"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/white"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.0 K"
                    android:id="@+id/tv_comment"
                    android:drawableLeft="@drawable/ic_action_reply"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/white"/>
        </LinearLayout>
    </FrameLayout>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="楼主：呵呵"
            android:textSize="14sp"
            android:id="@+id/tv_last_comment"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="left|center_vertical"
            android:textColor="@android:color/primary_text_dark"/>
</LinearLayout>