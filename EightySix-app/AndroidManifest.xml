    <!--<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />-->


    <application
            android:allowBackup="true"
            android:name=".app.BaseApplication"
            android:icon="@drawable/ic_app_icon"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">

        <meta-data
                android:name="TA_APPKEY"
                android:value="AF9DB3HH9A3B"/>

        <meta-data
                android:name="com.baidu.lbsapi.API_KEY"
                android:value="Z6S9LBSSdPUi96GkdLS6zO0L"/>

        <activity
                android:name=".app.intro.IntroActivity"
                android:exported="@bool/exported">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Tencent open sdk -->
        <activity
                android:name="com.tencent.tauth.AuthActivity"
                android:noHistory="true"
                android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data android:scheme="tencent1101518269"/>
            </intent-filter>
        </activity>
        <activity
                android:name="com.tencent.connect.common.AssistActivity"
                android:theme="@android:style/Theme.Translucent.NoTitleBar"
                android:configChanges="orientation|keyboardHidden"/>


        <activity
                android:name=".app.account.RegisterActivity"
                android:exported="@bool/exported"
                android:launchMode="singleInstance"
                android:windowSoftInputMode="stateVisible"/>

        <activity
                android:name=".app.account.ForgetPwdActivity"
                android:exported="@bool/exported"
                android:windowSoftInputMode="stateVisible"/>

        <activity
                android:name=".app.account.LoginActivity"
                android:exported="@bool/exported"
                android:launchMode="singleInstance"
                android:windowSoftInputMode="stateVisible"/>

        <activity
                android:name=".app.account.ImportContactActivity"
                android:exported="@bool/exported"/>

        <activity
                android:name=".app.account.GetLockpatternActivity"
                android:exported="@bool/exported"/>


        <activity
                android:name=".app.feed.FeedActivity"
                android:exported="@bool/exported"/>

        <activity
                android:name=".app.intro.GuideActivity"
                android:exported="@bool/exported"/>

        <activity
                android:name=".app.publish.PublishActivity"
                android:windowSoftInputMode="stateHidden|adjustResize"
                android:configChanges="keyboardHidden|orientation|keyboard|screenSize"
                android:exported="@bool/exported"/>

        <activity
                android:name=".app.circle.MyCirclesActivity"
                android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
                android:exported="@bool/exported"/>

        <activity
                android:name=".app.circle.CircleSearchActivity"
                android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
                android:exported="@bool/exported"/>

        <activity
                android:name=".app.circle.CircleCreateActivity"
                android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
