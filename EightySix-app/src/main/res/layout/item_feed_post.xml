<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:paddingLeft="8dp"
       android:paddingRight="8dp"
       android:paddingTop="8dp"
        >

    <FrameLayout
            android:id="@+id/fl_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

        <com.utree.eightysix.widget.AsyncImageView
                android:id="@+id/aiv_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />

        <View
                android:id="@+id/v_mask"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#44000000"
                />

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                >

            <TextView
                    android:id="@+id/tv_hot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/round_border_pressed"
                    android:text="热帖"
                    android:textSize="14sp"
                    android:textColor="#ffcccccc"
                    android:padding="@dimen/feed_hot_padding"
                    android:visibility="invisible"
                    />

            <LinearLayout
                    android:id="@+id/ll_tags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                <com.utree.eightysix.widget.TagView
                        android:id="@+id/tv_tag_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:textColor="@android:color/white"
                        />

                <com.utree.eightysix.widget.TagView
                        android:id="@+id/tv_tag_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:textColor="@android:color/white"
                        />

                <com.utree.eightysix.widget.TagView
                        android:id="@+id/tv_tag_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        />
            </LinearLayout>
        </LinearLayout>

        <TextView
                style="@style/TextView.PostStyle"
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@android:color/white"
                android:background="@android:color/transparent"
                />

        <ImageView
                android:id="@+id/iv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_share"
                />

        <LinearLayout
                android:id="@+id/fl_grid_panel"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp"
                >

            <TextView
                    android:id="@+id/tv_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    />

            <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />

            <TextView
                    android:id="@+id/tv_praise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:minWidth="45dp"
                    android:layout_marginRight="5dp"
                    />

            <TextView
                    android:id="@+id/tv_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_reply"
                    android:gravity="center_vertical|right"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:minWidth="45dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    />

        </LinearLayout>
    </FrameLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#09000000"
            />


    <LinearLayout
            android:id="@+id/ll_comment"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            >

        <TextView
                android:id="@+id/tv_last_comment_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="14sp"
                android:lines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#ff8a8a8a"
                />

        <TextView
                android:id="@+id/tv_last_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="14sp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:lines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@android:color/black"
                />

        <TextView
                android:id="@+id/tv_last_comment_tail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="14sp"
                android:lines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#ff8a8a8a"
                />
    </LinearLayout>

</merge>