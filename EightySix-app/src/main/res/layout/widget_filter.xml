<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res/com.utree.eightysix"
        android:id="@+id/ll_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="true"
        android:visibility="gone"
        tools:showIn="@layout/fragment_tab"
        >

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/apptheme_primary_dark_grey"
            android:text="你想看到的用户"
            android:padding="8dp"
            android:background="@color/apptheme_primary_grey_color"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:paddingTop="8dp"
            android:paddingRight="24dp"
            android:paddingBottom="8dp"
            android:orientation="horizontal"
            android:background="@color/apptheme_primary_grey_color"
            >

        <com.utree.eightysix.widget.RoundedButton
                android:id="@+id/tv_gender_all"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/apptheme_primary_text_dark"
                android:text="全部"
                app:background="@color/apptheme_primary_white_btn"
                />

        <com.utree.eightysix.widget.RoundedButton
                android:id="@+id/tv_gender_male"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/apptheme_primary_text_dark"
                android:text="男生"
                app:background="@color/apptheme_primary_white_btn"
                />

        <com.utree.eightysix.widget.RoundedButton
                android:id="@+id/tv_gender_female"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/apptheme_primary_text_dark"
                android:text="女生"
                app:background="@color/apptheme_primary_white_btn"
                />
    </LinearLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/apptheme_primary_dark_grey"
            android:text="范围筛选"
            android:padding="8dp"
            android:background="@color/apptheme_primary_grey_color"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:paddingTop="8dp"
            android:paddingRight="24dp"
            android:paddingBottom="8dp"
            android:orientation="horizontal"
            android:background="@color/apptheme_primary_grey_color"
            >

        <com.utree.eightysix.widget.RoundedButton
                android:id="@+id/tv_region_0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/apptheme_primary_text_dark"
                android:text="在职"
                app:background="@color/apptheme_primary_white_btn"
                />

        <com.utree.eightysix.widget.RoundedButton
                android:id="@+id/tv_region_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/apptheme_primary_text_dark"
                android:text="1公里内"
                app:background="@color/apptheme_primary_white_btn"
                />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:paddingTop="8dp"
            android:paddingRight="24dp"
            android:paddingBottom="16dp"
            android:orientation="horizontal"
            android:background="@color/apptheme_primary_grey_color"
            >

        <com.utree.eightysix.widget.RoundedButton
                android:id="@+id/tv_region_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/apptheme_primary_text_dark"
                android:text="5公里内"
                app:background="@color/apptheme_primary_white_btn"
                />

        <com.utree.eightysix.widget.RoundedButton
                android:id="@+id/tv_region_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/apptheme_primary_text_dark"
                android:text="同城"
                app:background="@color/apptheme_primary_white_btn"
                />
    </LinearLayout>

    <View
            android:id="@+id/v_mask"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/translucent"
            />
</LinearLayout>