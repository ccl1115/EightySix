<?xml version="1.0" encoding="utf-8"?>

<merge
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <LinearLayout
            android:id="@+id/tb_ll_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/apptheme_primary_btn_dark"
            android:paddingRight="8dp"
            android:orientation="horizontal"
            >

        <LinearLayout
                android:id="@+id/tb_ll_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/apptheme_primary_btn_dark"
                >

            <ImageView
                    android:id="@+id/tb_iv_action_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/top_bar_return"
                    android:contentDescription="@string/cd_action_left"
                    />

            <ImageView
                    android:id="@+id/tb_iv_app_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_app_icon"
                    />

        </LinearLayout>

        <View
                android:id="@+id/tb_v_divider"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="1px"
                android:background="#ff898989"
                />


        <LinearLayout
                android:id="@+id/tb_ll_title"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:background="@drawable/apptheme_primary_btn_dark"
                >


        <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    >

                <TextView
                        android:id="@+id/tb_tv_bar_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#fff7f7f7"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:maxLines="1"
                        />

                <TextView
                        android:id="@+id/tb_tv_sub_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="#ff8a8e99"
                        android:visibility="gone"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:maxLines="1"
                        />

            </LinearLayout>


            <ImageView
                    android:id="@+id/tb_iv_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/ic_tb_indicator"
                    />

        </LinearLayout>
    </LinearLayout>

    <com.utree.eightysix.widget.ImageActionButton
            android:id="@+id/tb_iab_action_overflow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_action_overflow"
            android:scaleType="centerInside"
            android:contentDescription="@string/cd_action_overflow"
            />


    <LinearLayout
            android:id="@+id/tb_ll_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:orientation="horizontal"
            >

        <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="8dp"
                android:background="#ff363940"
                >

            <EditText
                    android:id="@+id/tb_et_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:drawableLeft="@drawable/ic_search"
                    android:drawablePadding="4dp"
                    android:hint="@string/enter_search_keyword"
                    android:maxLength="50"
                    android:textColor="@android:color/white"
                    android:paddingRight="56dp"
                    android:singleLine="true"
                    android:lines="1"
                    android:paddingBottom="10dp"
                    android:imeOptions="actionGo|actionDone"
                    />


            <ImageView
                    android:id="@+id/tb_iv_search_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="2dp"
                    android:layout_gravity="right|center_vertical"
                    android:visibility="invisible"
                    android:src="@drawable/ic_close"
                    />

        </FrameLayout>

        <com.utree.eightysix.widget.RoundedButton
                android:id="@+id/tb_rb_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:minHeight="0dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:text="@string/search"
                android:textSize="14sp"
                />
    </LinearLayout>
</merge>