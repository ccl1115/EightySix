<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res/com.utree.eightysix"
              android:orientation="vertical"
              android:layout_width="190dp"
              android:layout_height="wrap_content"
              android:background="@android:color/white">

    <LinearLayout
            android:id="@+id/ll_invite"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/apptheme_primary_list_selector"
            android:orientation="horizontal">

        <TextView
                style="@style/TextView.SingleLine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:gravity="center_vertical"
                android:text="@string/introduce_to_friends"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>
    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#fff0f0f0"/>

    <LinearLayout
            android:id="@+id/ll_praise_count"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/apptheme_primary_list_selector"
            android:orientation="horizontal">

        <TextView
                style="@style/TextView.SingleLine"
                android:id="@+id/tv_praise_count"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:gravity="center_vertical"
                android:text="@string/praise_count_obtained"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>

        <com.utree.eightysix.widget.RoundedButton
                android:id="@+id/rb_new_praise_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_gravity="center_vertical"
                android:text="新"
                android:textSize="12sp"
                android:minHeight="0dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                app:radius="2dp"
                app:background="@color/apptheme_secondary_light_color"/>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#fff0f0f0"/>

    <LinearLayout
            android:id="@+id/ll_my_friends"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/apptheme_primary_list_selector"
            android:orientation="horizontal">

        <TextView
                style="@style/TextView.SingleLine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:gravity="center_vertical"
                android:text="@string/my_friends"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>

        <com.utree.eightysix.widget.RoundedButton
                android:id="@+id/rb_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:gravity="center_vertical"
                android:minHeight="0dp"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"
                android:text="添加"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                app:radius="14dp"
                app:background="@color/apptheme_primary_grey_btn"/>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#fff0f0f0"/>

    <LinearLayout
            android:id="@+id/ll_topic_list"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/apptheme_primary_list_selector"
            android:orientation="horizontal">

        <TextView
                style="@style/TextView.SingleLine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:gravity="center_vertical"
                android:text="全部话题"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingRight="15dp"
                android:textSize="14sp"
                android:textColor="#ffef5724"/>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#fff0f0f0"/>

    <LinearLayout
            android:id="@+id/ll_feedback"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/apptheme_primary_list_selector"
            android:orientation="horizontal">

        <TextView
                style="@style/TextView.SingleLine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:gravity="center_vertical"
                android:text="@string/feedback"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingRight="15dp"
                android:textSize="14sp"
                android:textColor="#ffef5724"/>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#fff0f0f0"/>

    <LinearLayout
            android:id="@+id/ll_help"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/apptheme_primary_list_selector"
            android:orientation="horizontal">

        <TextView
                style="@style/TextView.SingleLine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:gravity="center_vertical"
                android:text="@string/help"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingRight="15dp"
                android:textSize="14sp"
                android:textColor="#ffef5724"/>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#fff0f0f0"/>

    <LinearLayout
            android:id="@+id/ll_settings"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/apptheme_primary_list_selector"
            android:orientation="horizontal">

        <TextView
                style="@style/TextView.SingleLine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:gravity="center_vertical"
                android:text="@string/settings"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingRight="15dp"
                android:textSize="14sp"
                android:textColor="#ffef5724"/>

        <com.utree.eightysix.widget.RoundedButton
                android:id="@+id/rb_settings_dot"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginRight="8dp"
                android:layout_gravity="center_vertical"
                android:visibility="invisible"
                app:radius="5dp"
                app:background="@color/apptheme_secondary_light_color"/>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#fff0f0f0"/>
</LinearLayout>