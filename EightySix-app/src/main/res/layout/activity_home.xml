<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_drawer">

    <FrameLayout
            android:id="@+id/fl_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <FrameLayout
                android:id="@+id/fl_feed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/activity_top_bar_height"/>


        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ib_send"
                android:layout_gravity="end|bottom"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="6dp"
                android:src="@drawable/ic_post_pen"
                android:background="@drawable/btn_post"/>

    </FrameLayout>

    <FrameLayout
            android:id="@+id/fl_side"
            android:layout_width="244dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:gravity="center_vertical">

        <fragment
                class="com.utree.eightysix.app.home.RegionFragment"
                android:id="@+id/fragment_range"
                android:layout_width="244dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>

    </FrameLayout>

    <FrameLayout
            android:id="@+id/fl_right"
            android:layout_width="173dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:gravity="center_vertical"
            >

        <include
                layout="@layout/widget_feed_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>

    </FrameLayout>

</android.support.v4.widget.DrawerLayout>