<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/page_guide_margin_top"
            android:layout_marginBottom="60dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/guide_3"
            android:layout_above="@+id/tv_tip"/>

    <TextView
            android:id="@+id/tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/tv_sub_tip"
            android:text="分享心事，获得共鸣"
            android:textSize="26sp"
            android:textColor="@android:color/black"/>

    <TextView
            android:id="@+id/tv_sub_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="100dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:text="每当你觉得孤单，烦恼，心酸，想找个地方说说话时，最懂你的人就在身边"/>

</RelativeLayout>
