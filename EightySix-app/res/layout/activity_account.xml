<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffd8dbdb">

    <LinearLayout
            android:id="@+id/ll_parent"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:id="@+id/rl_id"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:background="@drawable/apptheme_primary_list_selector">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/iv_qr_code"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tv_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:textSize="16sp"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="2dp"
                        android:textSize="14sp"
                        android:textColor="@color/apptheme_primary_dark_color"
                        android:text="@string/scan_to_be_friend"/>
            </LinearLayout>


            <ImageView
                    android:id="@+id/iv_qr_code"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_toLeftOf="@+id/iv_arrow"
                    android:layout_centerVertical="true"/>

            <ImageView
                    android:id="@+id/iv_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_forward"/>
        </RelativeLayout>

        <include layout="@layout/widget_primary_divider"/>

        <TextView
                android:id="@+id/tv_people_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:textSize="14sp"
                android:textColor="@color/apptheme_secondary_dark_color"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:paddingTop="6dp"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="@color/apptheme_primary_dark_color"
                android:text="@string/my_friends"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="#ffd9d9d9"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

        <TextView
                android:id="@+id/tv_contact"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:gravity="center_vertical|left"
                android:drawableRight="@drawable/ic_forward"
                android:drawableLeft="@drawable/ic_contacts"
                android:drawablePadding="8dp"
                android:background="@drawable/apptheme_primary_list_selector"/>


        <include layout="@layout/widget_primary_divider"/>

        <TextView
                android:id="@+id/tv_scan"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:gravity="center_vertical|left"
                android:drawableRight="@drawable/ic_forward"
                android:drawableLeft="@drawable/ic_qrcode"
                android:drawablePadding="8dp"
                android:background="@drawable/apptheme_primary_list_selector"/>

        <include layout="@layout/widget_primary_divider"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:paddingTop="6dp"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="@color/apptheme_primary_dark_color"
                android:text="@string/known_people"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="#ffd9d9d9"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
    </LinearLayout>

</ScrollView>
