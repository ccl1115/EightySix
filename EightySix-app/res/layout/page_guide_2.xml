<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_tip"
            android:layout_marginBottom="120dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/guide_2"/>

    <TextView
            android:id="@+id/tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/tv_sub_tip"
            android:text="匿名发帖与评论"
            android:textSize="26sp"
            android:textColor="@android:color/black"/>

    <TextView
            android:id="@+id/tv_sub_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="50dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/iv_bottom_wave"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:text="你发表的内容，厂里认识你的人都能收到， 但无法知道作者是你"/>

    <ImageView
            android:id="@+id/iv_bottom_wave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:scaleType="centerCrop"
            android:src="@drawable/guide_bottom_wave"/>
</RelativeLayout>