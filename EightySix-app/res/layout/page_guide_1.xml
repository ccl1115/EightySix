<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/page_guide_margin_top"
            android:layout_marginBottom="20dp"
            android:layout_above="@+id/tv_tip"
            android:layout_centerHorizontal="true"
            android:src="@drawable/guide_1"/>

    <TextView
            android:id="@+id/tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:layout_above="@+id/tv_sub_tip"
            android:layout_centerHorizontal="true"
            android:textSize="26sp"
            android:textColor="@android:color/black"
            android:text="工厂里的秘密社区"/>

    <TextView
            android:id="@+id/tv_sub_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="100dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:text="这里只有工厂里打工的人才能加入，而且你无法知道他们的身份"/>

</RelativeLayout>