<?xml version="1.0" encoding="utf-8"?>


<com.utree.eightysix.widget.RefresherView
        xmlns:app="http://schemas.android.com/apk/res/com.utree.eightysix"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/refresh_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:direction="top"
        app:refresher_content="@+id/alv_refresh"
        app:refresher_head="@+id/tv_head"
        app:empty_view="@+id/tv_empty_text"
        app:max_height="300dp"
        app:threshold_height="200dp">

    <com.utree.eightysix.widget.AdvancedListView
            android:id="@+id/alv_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <com.utree.eightysix.widget.GearsView
            android:id="@+id/tv_head"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

    <com.utree.eightysix.widget.RandomSceneTextView
            android:id="@+id/tv_empty_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
</com.utree.eightysix.widget.RefresherView>