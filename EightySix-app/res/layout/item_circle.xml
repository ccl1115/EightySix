<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res/com.utree.eightysix"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="15dp">

        <com.utree.eightysix.widget.RoundedButton
                android:id="@+id/rb_icon"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="2dp"
                android:textSize="10sp"
                app:radius="1dp"/>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/tv_circle_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="16sp"/>

            <TextView
                    android:id="@+id/tv_circle_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:lines="1"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="13sp"
                    android:textColor="@color/apptheme_primary_dark_color"/>

        </LinearLayout>

        <com.utree.eightysix.widget.RoundedButton
                android:id="@+id/rb_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:minHeight="18dp"
                android:textSize="12sp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                app:radius="1dp"/>

        <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_forward"/>
    </LinearLayout>

    <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#fff0f0f0"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
</LinearLayout>